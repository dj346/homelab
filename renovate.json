{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "enabledManagers": ["dockerfile", "kubernetes", "argocd"],
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      ".*\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["kubernetes", "dockerfile"],
      "groupName": "container images",
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": ["ghcr.io/cloudnative-pg/postgresql"],
      "groupName": "CloudNativePG Postgres image"
    },
    {
      "matchPackageNames": ["lscr.io/linuxserver/sonarr"],
      "groupName": "Sonarr image"
    }
  ]
}
